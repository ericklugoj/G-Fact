<div class="p-4">
    <div class="row">
        {{#unless empleados}}
        <div class="col-md-6 mx-auto">
            <div class="card card-body text-center">
                <p>Aun no se ha dado de alta ningun empleado</p>
                <a href="/empleados/agregar">Dar de alta</a>
            </div>
        </div>
        {{else}}
        <h3 class="mb-4"><i class="fas fa-users"></i> Listado de empleados</h3>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Nacimiento</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">RFC</th>
                    <th scope="col">CURP</th>
                    <th scope="col">NSS</th>
                    <th scope="col">Dpto</th>
                    <th scope="col">Puesto</th>
                    <th scope="col">Ingreso</th>
                    <th scope="col">Direcci√≥n</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each empleados}}
                <tr>
                    <th scope="row">{{nombres}} {{apellidos}} <a href="/empleados/editar/{{id_empleado}}"><i
                                class="fas fa-user-edit"></i></a></th>
                    <td>{{fecha_nacimiento}}</td>
                    <td>{{sexo}}</td>
                    <td>{{rfc}}</td>
                    <td>{{curp}}</td>
                    <td>{{seguro_social}}</td>
                    <td>{{departamento}}</td>
                    <td>{{puesto}}</td>
                    <td>{{fecha_ingreso}}</td>
                    <td>{{direccion}}</td>
                    <td>{{telefono}}</td>
                    <td>{{email}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/unless}}
    </div>
</div>
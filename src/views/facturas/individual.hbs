<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <h1>Facturaci√≥n individual</h1>
            <div class="card text-center">
                <div class="card-body">
                    <select class="form-control form-control-lg" id="select_empleados">
                        <option value="" selected disabled hidden>Escoge un empleado</option>
                        {{#each empleados}}
                        <option value="{{id_empleado}}">{{nombres}} {{apellidos}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4 ocultar" id="formulario">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <form action="/facturas/facturar" method="POST">
                        <div class="form-row">
                            <div class="form-group" style="display: none;">
                                <input name="id_empleado" id="id_empleado" required>
                            </div>
                            <div class="form-group" style="display: none;">
                                <input name="nombre_completo_empleado" id="nombre_completo_empleado" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="sueldo_diario">Sueldo diario</label>
                                <input name="sueldo_diario" id="sueldo_diario" type="number" min="1"
                                    class="form-control" placeholder="Sueldo por dia trabajado" autofocus required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inicio_periodo">Inicio de periodo</label>
                                <input name="inicio_periodo" type="date" class="form-control" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="fin_periodo">Fin de periodo</label>
                                <input name="fin_periodo" type="date" class="form-control" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="otros_pagos">Otros pagos</label>
                                <input name="otros_pagos" type="number" min="0" class="form-control"
                                    placeholder="Monto">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="faltas">Faltas</label>
                                <input name="faltas" type="number" min="0" class="form-control" placeholder="Monto">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="retardos">Retardos</label>
                                <input name="retardos" type="number" min="0" class="form-control" placeholder="Monto">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="correo">Email</label>
                                <input name="correo" id="correo" type="email" class="form-control"
                                    placeholder="Correo electronico" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success float-right mt-4">Timbrar y enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
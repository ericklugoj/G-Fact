<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <form action="/empleados/agregar" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="nombres">Sueldo diario</label>
                                <input name="nombres" type="text" class="form-control"
                                    placeholder="Sueldo por dia trabajado" autofocus required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inicio_periodo">Inicio de periodo</label>
                                <input name="inicio_periodo" type="date" class="form-control" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="fin_periodo">Fin de periodo</label>
                                <input name="fin_periodo" type="date" class="form-control" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="otros_pagos">Otros pagos</label>
                                <input name="otros_pagos" type="number" min="0" class="form-control" placeholder="Monto"
                                    required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="rfc">Faltas</label>
                                <input name="rfc" type="number" min="0" class="form-control" placeholder="Monto"
                                    required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="curp">Retardos</label>
                                <input name="curp" type="number" min="0" class="form-control" placeholder="Monto"
                                    required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="correo">Email</label>
                                <input name="correo" type="email" class="form-control" placeholder="Correo electronico"
                                    required>
                            </div>
                        </div>
                        <button class="btn btn-success float-right mt-4">Timbrar y enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
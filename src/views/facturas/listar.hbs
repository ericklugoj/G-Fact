<div class="p-4">
    <div class="row">
        {{#unless facturas}}
        <div class="col-md-6 mx-auto">
            <div class="card card-body text-center">
                <p>Aun no se ha emitido ninguna factura</p>
                <a href="/facturas/global">Facturar Globlal</a>
                <a href="/facturas/individual">Facturar Individual</a>
            </div>
        </div>
        {{else}}
        <h3 class="mb-4"><i class="fas fa-users"></i> Listado de facturas</h3>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Empleado</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Fecha de timbrado</th>
                    <th scope="col">Monto total</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each facturas}}
                <tr>
                    <td scope="row">{{nombres}} {{apellidos}}</td>
                    <td>Ericklugoj@gmail.com</td>
                    <td>06 de mayo de 2019 13:22pm</td>
                    <td>$15,220.00</td>
                    <td>
                        <a href="#" class="badge badge-warning" data-toggle="tooltip" data-placement="top"
                            title="Re enviar por correo"><i class="fas fa-reply fa-2x"></i></a>
                        <a href="#" class="badge badge-danger" data-toggle="tooltip" data-placement="top"
                            title="Visualizar PDF"><i class="fas fa-file-pdf fa-2x"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/unless}}
    </div>
</div>
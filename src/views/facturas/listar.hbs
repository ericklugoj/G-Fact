<div class="p-4">
    <div class="row">
        {{#unless facturas}}
        <div class="col-md-6 mx-auto">
            <div class="card card-body text-center">
                <p>Aun no se ha emitido ninguna factura</p>
                <a href="/facturas/individual">Crear una factura individual</a>
            </div>
        </div>
        {{else}}
        <h3 class="mb-4"><i class="fas fa-users"></i> Listado de facturas</h3>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Empleado</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Fecha de timbrado</th>
                    <th scope="col">Monto total</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each facturas}}
                <tr>
                    <td scope="row">{{nombre_completo_empleado}}</td>
                    <td>{{email}}</td>
                    <td class="fecha">{{fecha_timbrado}}</td>
                    <td>${{monto_total}}</td>
                    <td>
                        <a href="/facturas/correo/{{id_facturas}}" class="badge badge-warning" data-toggle="tooltip"
                            data-placement="top" title="Re enviar por correo"><i class="fas fa-reply fa-2x"></i></a>
                        <a href="{{ruta_pdf}}" target="_blank" class="badge badge-danger" data-toggle="tooltip"
                            data-placement="top" title="Visualizar PDF"><i class="fas fa-file-pdf fa-2x"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/unless}}
    </div>
</div>